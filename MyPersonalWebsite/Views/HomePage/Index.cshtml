@using MyPersonalWebsite.Models.Classes
@model List<HomePage> 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Serpil Welcomes You!</title>
    <link rel="stylesheet" href="~/web-MyPersonalWebsite/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body>
    <div class="center">
        <div class="avatar">
            @foreach (var item in Model)
            {
                <img src="@item.Profile" >
            }

        </div>
        <div class="content">
            @foreach (var item in Model)
            {
            <h1>@item.UserName</h1>
            <h2> @item.Title </h2>
            <p> @item.Description </p>
            <!--  <p>Hi Everyone! I'm Serpil. Computer technologies are my area of interest and I am very happy to be in this field. In this project, I am experiencing developing a personal website. In general, I am interested in object-oriented programming languages such as C#, Java, Python and the requirements on the design side. I also work on machine learning. Friends who want to see my various projects can take a look at my github profile. You may or may not reach me through my social media accounts below.</p>
                -->

            <h4>@item.Contact</h4>
            }
        </div>
        @Html.Action("Icons","Homepage")
    </div>
</body>
</html>
